
////////////////////////////////////////////// CODIGO //////////////////////////////////////////////////////////////////


#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    long double a,b,c,fc;
    a=0;
	b=0;
	c=0;
	fc=999;
 
 while (!(fc>-0.00000001 && fc<0.00000001)){
 c++;
 fc=a*a*a+5*a-1;
 
    b=((a*a*a)-1)/-5;
     cout<<c<<"  " << a <<" "<<b<< endl;
     a=b;
 };
    return 0;
}

